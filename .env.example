# ============================================
# AI API Keys
# ============================================
ANTHROPIC_API_KEY=sk-ant-xxxxx
OPENAI_API_KEY=sk-xxxxx  # Optional, for embeddings
OPENROUTER_API_KEY=sk-or-xxxxx  # OpenRouter unified API key

# ============================================
# Model Configuration
# ============================================
# Primary provider: anthropic, openrouter, openai
AI_PROVIDER=openrouter

# OpenRouter Model Selection (see https://openrouter.ai/models)
# Format: provider/model-name
ANALYSIS_MODEL=anthropic/claude-3.5-sonnet  # Deep job analysis
PRESCREENING_MODEL=meta-llama/llama-3.1-8b-instruct  # Fast pre-screening
COVER_LETTER_MODEL=anthropic/claude-3.5-sonnet  # Cover letter generation
RESUME_MODEL=openai/gpt-4-turbo  # Resume generation
FALLBACK_MODEL=google/gemini-pro-1.5  # Fallback if primary fails

# Ensemble Analysis (use multiple models and combine scores)
ENABLE_ENSEMBLE=false
ENSEMBLE_MODELS=anthropic/claude-3.5-sonnet,openai/gpt-4-turbo,google/gemini-pro-1.5

# Cost Optimization
MAX_COST_PER_JOB=0.50  # Maximum spend per job analysis (USD)
USE_CHEAP_PRESCREENING=true  # Use cheaper model for initial filter
CHEAP_MODEL_THRESHOLD=60  # If cheap model scores <60, skip expensive analysis
ENABLE_COST_TRACKING=true

# ============================================
# Google Cloud Credentials
# ============================================
GOOGLE_CREDENTIALS_PATH=./credentials/service-account.json
GOOGLE_OAUTH_CREDENTIALS_PATH=./credentials/oauth-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-base-folder-id  # Root folder for jobs

# ============================================
# Email Configuration
# ============================================
NOTIFICATION_EMAIL=your-email@example.com
SENDER_EMAIL=your-service-account@project.iam.gserviceaccount.com

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///./job_automation.db

# ============================================
# Redis (Task Queue)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Application Settings
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# ============================================
# Job Search Settings
# ============================================
DEFAULT_LOCATION=Remote,United States
DEFAULT_JOB_TITLES=Business Analyst,Operations Analyst,Product Manager,Risk Analyst
MIN_MATCH_SCORE=70

# ============================================
# Claude Configuration
# ============================================
CLAUDE_MODEL=claude-sonnet-4-20250514
MAX_TOKENS=8000

# ============================================
# Job Board API Keys (Optional)
# ============================================
LINKEDIN_CLIENT_ID=xxxxx
LINKEDIN_CLIENT_SECRET=xxxxx
INDEED_API_KEY=xxxxx
GLASSDOOR_API_KEY=xxxxx

# ============================================
# Security
# ============================================
SECRET_KEY=your-super-secret-key-change-this-to-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
